#!/bin/sh

set -e

LOGLEVEL="INFO"
TASKS="${TASKS:-mist.api.tasks}"
SCHEDULER="${SCHEDULER:-mist.api.portal.schedulers.RunImmediatelyPersistentScheduler}"


USAGE="Usage: $0 [-h] [-l <LOGLEVEL>] [-t <TASKS_PATH>]

Start beat (used for internal/portal periodic tasks)

Options:
    -h              Show this help message and exit.
    -l <LOGLEVEL>   Log level. Defaults to $LOGLEVEL.
    -t <TASKS_PATH> Tasks file to import. Defaults to $TASKS.
    -s <SCHEDULER>  Scheduler class. Defaults to $SCHEDULER.
"

while getopts "hl:t:s:" opt; do
    case "$opt" in
        h)
            echo "$USAGE"
            exit
            ;;
        l)
            LOGLEVEL=$OPTARG
            ;;
        t)
            TASKS=$OPTARG
            ;;
        s)
            SCHEDULER=$OPTARG
        \?)
            echo "Invalid option: -$OPTARG" >&2
            echo "$USAGE" >&2
            exit 1
    esac
done

set -x

exec celery beat \
    -A $TASKS \
    -S $SCHEDULER \
    --pidfile= \
    -l $LOGLEVEL
